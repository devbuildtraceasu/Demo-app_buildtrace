# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=odin_dev
DB_USER=odin
DB_PASSWORD=odin_dev_password

# Storage Configuration
# For local development with MinIO
STORAGE_BACKEND=s3
STORAGE_ENDPOINT=http://localhost:9000
STORAGE_ACCESS_KEY=minio
STORAGE_SECRET_KEY=minio123
STORAGE_BUCKET=odin-uploads
STORAGE_REGION=us-east-1

# For production with Google Cloud Storage
# STORAGE_BACKEND=gcs
# STORAGE_BUCKET=your-gcs-bucket
# GOOGLE_APPLICATION_CREDENTIALS=/path/to/service-account.json

# PubSub Configuration
# For local development with emulator
PUBSUB_EMULATOR_HOST=localhost:8681
PUBSUB_PROJECT_ID=local-dev
VISION_TOPIC=vision
VISION_SUBSCRIPTION=vision.worker
APP_URL=http://localhost:5173

# For production with Google Cloud Pub/Sub
# PUBSUB_PROJECT_ID=your-gcp-project-id
# GOOGLE_APPLICATION_CREDENTIALS=/path/to/service-account.json

# LLM API Configuration
OPENAI_API_KEY=sk-...
GEMINI_API_KEY=...

# Worker Configuration
# Log level: INFO for production, DEBUG for timing/profiling
WORKER_LOG_LEVEL=INFO
WORKER_POLL_INTERVAL=10
WORKER_MAX_RETRIES=3
WORKER_MAX_CONCURRENT_MESSAGES=1
WORKER_MAX_MEMORY_BYTES=1073741824  # 1Gb
